{
  "name": "static-site-template",
  "version": "0.1.0",
  "repository": "https://github.com/chaucerbao/static-site-template/",
  "author": "Alvin Chan <no@email.com>",
  "license": "MIT",
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "standard": {
    "parser": "babel-eslint"
  },
  "stylelint": {
    "extends": [
      "stylelint-config-sass-guidelines",
      "stylelint-config-property-sort-order-smacss"
    ]
  },
  "scripts": {
    "start": "gulp clean && gulp",
    "clean": "gulp clean",
    "dist": "gulp clean && gulp dist",
    "lint": "stylelint 'src/css/**/*.scss' && standard 'src/js/**/*.js'",
    "lint:fix": "stylefmt --recursive 'src/css/**/*.scss' && prettier --write 'src/js/**/*.js' && standard --fix 'src/js/**/*.js'",
    "precommit": "npm run-script lint"
  },
  "devDependencies": {
    "babel-eslint": "^7.1.1",
    "babel-preset-es2015": "^6.22.0",
    "babelify": "^7.3.0",
    "browser-sync": "^2.18.8",
    "browserify": "^14.1.0",
    "cssnano": "^3.10.0",
    "gulp": "^3.9.1",
    "gulp-filter": "^5.0.0",
    "gulp-htmlmin": "^3.0.0",
    "gulp-nunjucks": "^3.0.0",
    "gulp-postcss": "^6.3.0",
    "gulp-rev": "^7.1.2",
    "gulp-rev-replace": "^0.4.3",
    "gulp-sass": "^3.1.0",
    "gulp-sourcemaps": "^2.4.1",
    "gulp-uglify": "^2.0.1",
    "husky": "^0.13.1",
    "prettier": "^0.19.0",
    "pump": "^1.0.2",
    "standard": "^8.6.0",
    "stylefmt": "^5.1.2",
    "stylelint": "^7.9.0",
    "stylelint-config-property-sort-order-smacss": "^1.0.2",
    "stylelint-config-sass-guidelines": "^2.0.0",
    "through2": "^2.0.3"
  }
}
